! Configuration File for keepalived

global_defs {
   notification_email {
     acassen@firewall.loc
     failover@firewall.loc
     sysadmin@firewall.loc
   }
   notification_email_from Alexandre.Cassen@firewall.loc
   smtp_server 192.168.200.1
   smtp_connect_timeout 30
{% if ansible_eth0.ipv4.address == "192.168.1.31" %}
   router_id lvs03
{% elif ansible_eth0.ipv4.address == "192.168.1.32" %}
   router_id lvs04
{% endif %}
   vrrp_skip_check_adv_addr
   vrrp_strict
   vrrp_garp_interval 0
   vrrp_gna_interval 0
}

vrrp_script chk_nfs {
   script "/etc/keepalived/nfs.sh"
   interval 2
   weight 2
}
vrrp_instance VI_1 {
{% if ansible_eth0.ipv4.address == "192.168.1.31" %}
    state MASTER
{% elif ansible_eth0.ipv4.address == "192.168.1.32" %}
    state BACKUP
{% endif %}
    interface eth0
    virtual_router_id 52
{% if ansible_eth0.ipv4.address == "192.168.1.31" %}
    priority 100
{% elif ansible_eth0.ipv4.address == "192.168.1.32" %}
    priority 50
{% endif %}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass 1111
    }
    track_interface {
	eth0
    }
    track_script {
	chk_nfs
    }
    virtual_ipaddress {
        192.168.1.200/24 dev eth0 label eth0:1
    }
}

